<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme (Day) -->
    <style name="Theme.day" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/blue_700</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>
