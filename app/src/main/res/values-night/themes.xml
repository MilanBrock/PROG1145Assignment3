<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme (Night) -->
    <style name="Theme.night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_500</item>
        <item name="colorSecondaryVariant">@color/amber_700</item>
        <item name="colorOnSecondary">@color/grey_800</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/grey_850</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/grey_800</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>
